{
  "name": "dataverse-powertools",
  "displayName": "Dataverse PowerTools",
  "description": "Tools to help build and manage Dataverse and Dynamics 365 CE projects",
  "publisher": "dataversepowertools",
  "icon": "media/logo_new.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pete-mc/dataverse-powertools"
  },
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dataverse-powertools.readProject",
    "onCommand:dataverse-powertools.generateTemplate"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "submenu": "dataverse-powertools.buildPlugin"
        },
        {
          "submenu": "dataverse-powertools.buildWebresources"
        },
        {
          "submenu": "dataverse-powertools.extractSolution"
        }
      ],
      "dataverse-powertools.buildPlugin": [
        {
          "command": "dataverse-powertools.buildPlugin",
          "alt": "dataverse-powertools.buildPlugin",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
        },
        {
          "command": "dataverse-powertools.buildDeployPlugin",
          "alt": "dataverse-powertools.buildDeployPlugin",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
        },
        {
          "command": "dataverse-powertools.generateEarlyBound",
          "alt": "dataverse-powertools.generateEarlyBound",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
        },
        {
          "command": "dataverse-powertools.createPluginClass",
          "alt": "dataverse-powertools.createPluginClass",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
        },
        {
          "command": "dataverse-powertools.createWorkflowClass",
          "alt": "dataverse-powertools.createWorkflowClass",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
        }
      ],
      "dataverse-powertools.buildWebresources": [
        {
          "command": "dataverse-powertools.buildWebresources",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
        },
        {
          "command": "dataverse-powertools.deployWebresources",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
        },
        {
          "command": "dataverse-powertools.generateTypings",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
        },
        {
          "command": "dataverse-powertools.createWebResourceClass",
          "alt": "dataverse-powertools.createWebResourceClass",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
        }
      ],
      "dataverse-powertools.extractSolution": [
        {
          "command": "dataverse-powertools.extractSolution",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isSolution"
        },
        {
          "command": "dataverse-powertools.packSolution",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isSolution"
        },
        {
          "command": "dataverse-powertools.deploySolution",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isSolution"
        }
      ],
      "dataverse-powertools.buildPortal": [
        {
          "command": "dataverse-powertools.buildWebresources",
          "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPortal"
        }
      ]
    },
    "submenus": [
      {
        "id": "dataverse-powertools.buildPlugin",
        "label": "Plugin Actions"
      },
      {
        "id": "dataverse-powertools.buildWebresources",
        "label": "Web Resources Actions"
      },
      {
        "id": "dataverse-powertools.extractSolution",
        "label": "Solution Actions"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dataverse-powertools",
          "title": "Dataverse Tools",
          "icon": "media/logo_new.svg"
        }
      ]
    },
    "views": {
      "dataverse-powertools": [
        {
          "id": "nodeDependencies",
          "name": "Node Dependencies",
          "icon": "media/dep.svg",
          "contextualTitle": "Package Explorer"
        }
      ],
      "explorer": []
    },
    "viewsWelcome": [
      {
        "view": "nodeDependencies",
        "contents": "\n[Initialise Project](command:dataverse-powertools.initialiseProject)",
        "when": "!dataverse-powertools.showLoaded"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Build Web Resources](command:dataverse-powertools.buildWebresources)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Build & Deploy Web Resources](command:dataverse-powertools.deployWebresources)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Generate Typings](command:dataverse-powertools.generateTypings)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Build and Deploy Plugins](command:dataverse-powertools.buildDeployPlugin)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Build Plugins](command:dataverse-powertools.buildPlugin)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Generate Early Bound](command:dataverse-powertools.generateEarlyBound)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Create Plugin Class](command:dataverse-powertools.createPluginClass)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Create Workflow Class](command:dataverse-powertools.createWorkflowClass)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isPlugin"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Restore Dependencies](command:dataverse-powertools.restoreDependencies)",
        "when": "dataverse-powertools.showLoaded"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Extract Solution](command:dataverse-powertools.extractSolution)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isSolution"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Pack Solution](command:dataverse-powertools.packSolution)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isSolution"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Deploy Solution](command:dataverse-powertools.deploySolution)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isSolution"
      },
      {
        "view": "nodeDependencies",
        "contents": "\n[Create Web Resource Class](command:dataverse-powertools.createWebResourceClass)",
        "when": "dataverse-powertools.showLoaded && dataverse-powertools.isWebResource"
      }
    ],
    "commands": [
      {
        "command": "dataverse-powertools.createConnectionString",
        "title": "Dataverse PowerTools: Create Connection String"
      },
      {
        "command": "dataverse-powertools.initialiseWebresources",
        "title": "Dataverse PowerTools: Initialise Web Resources"
      },
      {
        "command": "dataverse-powertools.initialiseProject",
        "title": "Dataverse PowerTools: Initialise Project"
      },
      {
        "command": "dataverse-powertools.generateEarlyBound",
        "title": "Dataverse PowerTools: Generate Early Bound"
      },
      {
        "command": "dataverse-powertools.buildDeployPlugin",
        "title": "Dataverse PowerTools: Build and Deploy Plugins"
      },
      {
        "command": "dataverse-powertools.buildPlugin",
        "title": "Dataverse PowerTools: Build Plugins"
      },
      {
        "command": "dataverse-powertools.buildDeployWorkflow",
        "title": "Dataverse PowerTools: Build and Deploy Workflows"
      },
      {
        "command": "dataverse-powertools.buildWebresources",
        "title": "Dataverse PowerTools: Build Webresources"
      },
      {
        "command": "dataverse-powertools.deployWebresources",
        "title": "Dataverse PowerTools: Build and Deploy Webresources"
      },
      {
        "command": "dataverse-powertools.generateTypings",
        "title": "Dataverse PowerTools: Generate Typings"
      },
      {
        "command": "dataverse-powertools.generateTemplates",
        "title": "Dataverse PowerTools: Generate Templates"
      },
      {
        "command": "dataverse-powertools.createPluginClass",
        "title": "Dataverse PowerTools: Create Plugin Class"
      },
      {
        "command": "dataverse-powertools.createWorkflowClass",
        "title": "Dataverse PowerTools: Create Workflow Class"
      },
      {
        "command": "dataverse-powertools.restoreDependencies",
        "title": "Dataverse PowerTools: Restore Dependencies"
      },
      {
        "command": "dataverse-powertools.createSNKKey",
        "title": "Dataverse PowerTools: Create SNK Key"
      },
      {
        "command": "dataverse-powertools.extractSolution",
        "title": "Dataverse PowerTools: Extract Solution"
      },
      {
        "command": "dataverse-powertools.packSolution",
        "title": "Dataverse PowerTools: Pack Solution"
      },
      {
        "command": "dataverse-powertools.deploySolution",
        "title": "Dataverse PowerTools: Deploy Solution"
      },
      {
        "command": "dataverse-powertools.createWebResourceClass",
        "title": "Dataverse PowerTools: Create Web Resource Class"
      },
      {
        "command": "dataverse-powertools.connectPortal",
        "title": "Dataverse PowerTools: Connect Portal"
      },
      {
        "command": "dataverse-powertools.downloadPortal",
        "title": "Dataverse PowerTools: Download Portal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.5.5",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "node-fetch": "^3.2.10"
  }
}
